<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net48</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ApplicationIcon>rclone.ico</ApplicationIcon>
    <AssemblyName>Rmount</AssemblyName>
    <RootNamespace>Rmount</RootNamespace>
    <LangVersion>latest</LangVersion>
    <Nullable>disable</Nullable>
    
    <!-- Keep our custom AssemblyInfo.cs -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="rclone.ico" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="SetupDialog.cs">
      <SubType>Form</SubType>
    </Compile>
  </ItemGroup>

</Project>
